APN=$(cat << EOF
{
    "aps": {
        "alert": {
            "body": "Bob, you just received a badge",
            "title": "Bob alert"
        },
        "badge": 1
    }
}
EOF
)

curl -X POST https://notify.twilio.com/v1/Services/ISaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa/Notifications \
--data-urlencode "Apn=$APN" \
--data-urlencode "Identity=00000001" \
-u ACaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa:your_auth_token