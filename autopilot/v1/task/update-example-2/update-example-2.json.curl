ACTIONS=$(cat << EOF
{
    "actions": [
        {
            "say": {
                "speech": "I was going to look for my missing watch, but I could never find the time."
            }
        }
    ]
}
EOF
)

curl -X POST https://autopilot.twilio.com/v1/Assistants/assistant_unique_name/Tasks/task_unique_name \
--data-urlencode "Actions=$ACTIONS" \
-u ACXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX:your_auth_token