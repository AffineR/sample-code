INITIATIONACTIONS=$(cat << EOF
{
    "actions": [
        {
            "say": {
                "speech": "Hello, I'm your virtual assistant! How can I help you?"
            }
        }
    ]
}
EOF
)

curl -X POST https://preview.twilio.com/understand/Assistants \
--data-urlencode "UniqueName=greet-assistant" \
--data-urlencode "InitiationActions=$INITIATIONACTIONS" \
-u ACXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX:your_auth_token